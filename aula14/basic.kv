#:kivy 1.11.1
<MyWidget>:
    orientation: 'vertical'
    padding: 10
    Label:
        id: text
        text: '0'
        font_size: 70
        size_hint: (1, None)
        text_size: self.size
        halign: 'right'
        height: self.texture_size[1]
    BoxLayout:
        Button:
            font_size: 45
            text: '7'
            on_press: root.press('7')
        Button:
            font_size: 45
            text: '8'
            on_press: root.press('8')
        Button:
            font_size: 45
            text: '9'
            on_press: root.press('9')
        Button:
            font_size: 45
            text: '+'
            on_press: root.press('+')
    BoxLayout:
        Button:
            font_size: 45
            text: '4'
            on_press: root.press('4')
        Button:
            font_size: 45
            text: '5'
            on_press: root.press('5')
        Button:
            font_size: 45
            text: '6'
            on_press: root.press('6')
        Button:
            font_size: 45
            text: '-'
            on_press: root.press('-')
    BoxLayout:
        Button:
            font_size: 45
            text: '1'
            on_press: root.press('1')
        Button:
            font_size: 45
            text: '2'
            on_press: root.press('2')
        Button:
            font_size: 45
            text: '3'
            on_press: root.press('3')
        Button:
            font_size: 45
            text: '*'
            on_press: root.press('*')
    BoxLayout:
        Button:
            font_size: 45
            text: 'C'
            on_press: root.clear()
        Button:
            font_size: 45
            text: '0'
            on_press: root.press('0')
        Button:
            font_size: 45
            text: 'DEL'
            on_press: root.delete()
        Button:
            font_size: 45
            text: '/'
            on_press: root.press('/')
    BoxLayout:
        Button:
            font_size: 45
            text: '='
            size_hint_x: 0.75
            on_press: root.result()
        Button:
            font_size: 45
            text: '.'
            size_hint_x: 0.25
            on_press: root.press('.')
